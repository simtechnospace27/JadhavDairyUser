<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v4.widget.NestedScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/othersCardNA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_margin="1dp"
                android:elevation="12dp"
                android:thicknessRatio="1"
                app:cardPreventCornerOverlap="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">



                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Requirements : "
                            android:layout_weight="2"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />


                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/txtUserRequirementsNA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/fab_margin"
                            android:paddingLeft="@dimen/text_margin_left"
                            android:text="text"
                            android:layout_weight="1"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">



                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Approval Message : "
                            android:layout_weight="2"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />


                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/txtUserApprovalStatusNA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/fab_margin"
                            android:paddingLeft="@dimen/text_margin_left"
                            android:text="text"
                            android:layout_weight="1"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">



                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Delivery Boy : "
                            android:layout_weight="2"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />


                        <TextView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/txtUserAssignedDeliveryBoyNA"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/fab_margin"
                            android:paddingLeft="@dimen/text_margin_left"
                            android:text="text"
                            android:layout_weight="1"
                            android:textColor="@color/changeTextColor"
                            android:textSize="@dimen/normal_text_size"
                            android:textStyle="bold" />

                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout></android.support.v4.widget.NestedScrollView></LinearLayout>
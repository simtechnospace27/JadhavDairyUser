<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffefebe9"
    android:padding="1.0dip">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Name"
        android:textColor="@color/changeTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUserNameinBills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_tUserNameinBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Address"
        android:textColor="@color/changeTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUserBillAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_tUserBillAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:hint="Enter Requirement"
                android:padding="5dp"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Billing Date"
        android:textColor="@color/changeTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtBilingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_tBillingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:hint="Enter Requirement"
                android:padding="5dp"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="No"
        android:textColor="@color/changeTextColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Requirement"
        android:textColor="@color/changeTextColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Days"
        android:textColor="@color/changeTextColor" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Bill(Rs)"
        android:textColor="@color/changeTextColor" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BillPayment">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="Total"
            android:textColor="@color/changeTextColor" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtTotalBill"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_ttotalBill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Proceed to Pay"
        android:layout_weight="1"
        android:id="@+id/btnPay"
        android:background="#FF0000"/>
</android.support.v7.widget.CardView>
</LinearLayout>
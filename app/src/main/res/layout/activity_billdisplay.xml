<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffefebe9"
    android:padding="1.0dip">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:scrollbars="vertical">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffefebe9"
            android:padding="1.0dip">

    <android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardElevation="2dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffefebe9"
        android:padding="1.0dip">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Name : "
        android:layout_weight="2"
        android:textStyle="bold"
        android:textColor="@color/changeTextColor" />


            <TextView
                android:id="@+id/edit_tUserNameinBills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Address : "
        android:textStyle="bold"
        android:layout_weight="2"
        android:textColor="@color/changeTextColor" />



            <TextView
                android:id="@+id/edit_tUserBillAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Billing Date : "
        android:layout_weight="2"
        android:textStyle="bold"
        android:textColor="@color/changeTextColor" />



            <TextView
                android:id="@+id/edit_tBillingDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:hint="Enter Requirement"
                android:padding="5dp"
                android:layout_weight="1"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="Per Ltr Charges : "
            android:layout_weight="2"
            android:textStyle="bold"
            android:textColor="@color/changeTextColor" />



        <TextView
            android:id="@+id/edit_tPerLitCharges"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:hint="50 Rs."
            android:padding="5dp"
            android:layout_weight="1"
            android:textColor="@color/changeTextColor"
            android:textColorHint="@color/changeTextColor" />

    </LinearLayout>


</LinearLayout>
</android.support.v7.widget.CardView>




<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="5dp"
    android:elevation="4dp"
    app:cardElevation="2dp"
    android:id="@+id/cardBillDetails">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:text="Sr. No"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/changeTextColor" />


        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="#c0c0c0"/>


        <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_weight="1"
        android:layout_marginTop="10dp"
            android:textSize="12dp"
        android:textStyle="bold"
            android:gravity="center"
        android:text="Requirements"
        android:textColor="@color/changeTextColor" />

        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:textSize="12dp"
        android:gravity="center"
        android:text="Days"
        android:textStyle="bold"
        android:textColor="@color/changeTextColor" />

        <View
            android:layout_height="match_parent"
            android:layout_width="2dp"
            android:background="#c0c0c0"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textStyle="bold"
        android:text="Total(Rs)"
        android:textColor="@color/changeTextColor" />
    </LinearLayout>

        <View
            android:layout_height="2dp"
            android:layout_width="match_parent"
            android:background="#c0c0c0"/>

        <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BillPayment">

    </android.support.v7.widget.RecyclerView>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:src="@drawable/gpay"
       android:clickable="true"
       android:layout_margin="10dp"
       android:layout_weight="1"/>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bhim"
        android:layout_margin="10dp"
        android:clickable="true"
        android:layout_weight="1"/>



    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edtTotalPricePay"
            android:visibility="invisible"/>
</LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>
</LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
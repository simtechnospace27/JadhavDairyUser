<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragments.ProfileFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="20dp">


          <!--  <ImageView
                android:id="@+id/imageViewLoginLogo"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:layout_gravity="center"
                android:src="@drawable/jadhav_dairy_logo" />-->


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:text=" User Name"
                android:textColor="@color/changeTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_tUserName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="16dp"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/changeTextColor"
                        android:textColorHint="@color/changeTextColor" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:text="Email"
                android:textColor="@color/changeTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtUserNameRegistration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_tUserNameRegistration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="16dp"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/changeTextColor"
                        android:textColorHint="@color/changeTextColor" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:text="Address"
                android:textColor="@color/changeTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtUserAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_tUserAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="16dp"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/changeTextColor"
                        android:textColorHint="@color/changeTextColor" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:text="Mobile No."
                android:textColor="@color/changeTextColor" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_tUserMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="16dp"
                        android:inputType="textEmailAddress"
                        android:padding="5dp"
                        android:textColor="@color/changeTextColor"
                        android:textColorHint="@color/changeTextColor" />

                </android.support.design.widget.TextInputLayout>
            </LinearLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:padding="5dp"
                android:text="Your Daily Requirement"
                android:textColor="@color/changeTextColor" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/edit_tUserRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoSizeMaxTextSize="30dp"
                        android:autoSizeMinTextSize="16dp"
                        android:inputType="numberDecimal"
                        android:padding="5dp"
                        android:textColor="@color/changeTextColor"
                        android:textColorHint="@color/changeTextColor" />

                </android.support.design.widget.TextInputLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/txtUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:textColorHint="@color/changeTextColor"
                    app:errorTextAppearance="@style/error_appearance"
                    app:hintTextAppearance="@color/changeTextColor">


                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinner2"/>

                </android.support.design.widget.TextInputLayout>

            </LinearLayout>

                <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:autoSizeMaxTextSize="30dp"
               android:autoSizeMinTextSize="16dp"
               android:padding="5dp"
               android:text="Old Password"
               android:textColor="@color/changeTextColor" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="20dp"
               android:orientation="horizontal">

               <android.support.design.widget.TextInputLayout
                   android:id="@+id/txtUserOldPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:autoSizeMaxTextSize="30dp"
                   android:autoSizeMinTextSize="16dp"
                   android:textColorHint="@color/changeTextColor"
                   app:errorTextAppearance="@style/error_appearance"
                   app:hintTextAppearance="@color/changeTextColor">

                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/edit_tUserOldPassword"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:autoSizeMaxTextSize="30dp"
                       android:autoSizeMinTextSize="16dp"
                       android:inputType="textPassword"
                       android:padding="5dp"
                       android:textColor="@color/changeTextColor"
                       android:textColorHint="@color/changeTextColor" />

               </android.support.design.widget.TextInputLayout>
           </LinearLayout>

                <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="10dp"
               android:layout_marginTop="10dp"
               android:layout_marginRight="10dp"
               android:autoSizeMaxTextSize="30dp"
               android:autoSizeMinTextSize="16dp"
               android:padding="5dp"
               android:text="New Password"
               android:textColor="@color/changeTextColor" />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginBottom="20dp"
               android:orientation="horizontal">

               <android.support.design.widget.TextInputLayout
                   android:id="@+id/txtUserNewPassword"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:autoSizeMaxTextSize="30dp"
                   android:autoSizeMinTextSize="16dp"
                   android:textColorHint="@color/changeTextColor"
                   app:errorTextAppearance="@style/error_appearance"
                   app:hintTextAppearance="@color/changeTextColor">

                   <android.support.design.widget.TextInputEditText
                       android:id="@+id/edit_tUserNewPassword"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:autoSizeMaxTextSize="30dp"
                       android:autoSizeMinTextSize="16dp"
                       android:inputType="textPassword"
                       android:padding="5dp"
                       android:textColor="@color/changeTextColor"
                       android:textColorHint="@color/changeTextColor" />

               </android.support.design.widget.TextInputLayout>
           </LinearLayout>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:background="@color/normalButtonColor"
                android:text="Save"
                android:textColor="#ffffff" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
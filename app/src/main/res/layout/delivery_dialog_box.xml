<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:background="#ffefebe9"
    android:padding="1.0dip"
    >
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:orientation="vertical"
android:layout_width="350dp"
android:layout_height="wrap_content"
android:background="#ffefebe9"
android:padding="1.0dip">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="No Milk"
        android:textColor="@color/changeTextColor" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/noMilkCheckBoxError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Milk"
                android:id="@+id/noMilkCheckBox"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hideOnNoMilk">


    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="Date"
            android:textColor="@color/changeTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:textColorHint="@color/changeTextColor"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@color/changeTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_tDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:inputType="textEmailAddress"
                    android:padding="5dp"
                    android:textColor="@color/changeTextColor"
                    android:textColorHint="@color/changeTextColor" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="Requirement:"
            android:textColor="@color/changeTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtUserCardRequirement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:textColorHint="@color/changeTextColor"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@color/changeTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_tUserCardRequirement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:hint="Enter Requirement"
                    android:padding="5dp"
                    android:inputType="number"
                    android:textColor="@color/changeTextColor"
                    android:textColorHint="@color/changeTextColor" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUnit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner2"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtMilkType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerMilkType"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Additional Requirement:"
        android:textColor="@color/changeTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUserCardRequirementAddn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_tUserCardRequirementAddn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:hint="Enter Requirement"
                android:padding="5dp"
                android:inputType="number"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtUnitAddn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerAddn"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtMilkTypeAddn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">


            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerMilkTypeAddn"/>

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:autoSizeMaxTextSize="30dp"
        android:autoSizeMinTextSize="16dp"
        android:padding="5dp"
        android:text="Delivery Status:"
        android:textColor="@color/changeTextColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/txtDeliveryStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:textColorHint="@color/changeTextColor"
            app:errorTextAppearance="@style/error_appearance"
            app:hintTextAppearance="@color/changeTextColor">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/edit_tDeliveryStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:inputType="textEmailAddress"
                android:padding="5dp"
                android:textColor="@color/changeTextColor"
                android:textColorHint="@color/changeTextColor" />

        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/hideDateOptions">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="From Date:"
            android:id="@+id/txtFromDate"
            android:textColor="@color/changeTextColor" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:autoSizeMaxTextSize="30dp"
            android:autoSizeMinTextSize="16dp"
            android:padding="5dp"
            android:text="To Date:"
            android:textColor="@color/changeTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/txtUptoDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeMinTextSize="16dp"
                android:textColorHint="@color/changeTextColor"
                app:errorTextAppearance="@style/error_appearance"
                app:hintTextAppearance="@color/changeTextColor">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/edit_txtUpToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeMaxTextSize="30dp"
                    android:autoSizeMinTextSize="16dp"
                    android:inputType="date"
                    android:padding="5dp"
                    android:focusable="false"
                    android:clickable="true"
                    android:textColor="@color/changeTextColor"
                    android:textColorHint="@color/changeTextColor" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

    </LinearLayout>




    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_weight="1"
        android:id="@+id/btnOK"
        android:background="#FF0000"/>

  </LinearLayout>




</android.support.v4.widget.NestedScrollView>